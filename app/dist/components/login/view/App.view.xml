<mvc:View controllerName="dalrae.cap.supabase.fioridemo.components.login.controller.App" displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
	<App id="app">
		<Page showHeader="false" >
			<VBox 
				width="100%"
				height="100%" 
				alignItems="Center"
				justifyContent="Center">
				<Image src="./background.svg" width="313px" />
				<Input width="313px" id="email" placeholder="you@domain.com" />
				<Button id="button" icon="sap-icon://visits" text="Get magic link" width="313px" press="login" />

				<MessageStrip
					id="msg"
					visible="false"
					text="Check your email and click the magic link"
					type="Success"
					showIcon="true"/>
		
			</VBox>
		</Page>
	</App>
</mvc:View>